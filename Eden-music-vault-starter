from flask import Flask, render_template, request, send_file
from io import BytesIO
import random

app = Flask(__name__)

@app.route('/')
def home():
    return render_template('index.html')

@app.route('/generate', methods=['POST'])
def generate():
    blueprint = request.form.get('blueprint')

    # Simulate unique music generation from blueprint
    # (replace with real model later if desired)
    filename = f"eden_track_{random.randint(1000,9999)}.txt"
    output = f"ðŸŽµ Eden Sequence Generated from Blueprint:\n\n{blueprint}"

    memory_file = BytesIO()
    memory_file.write(output.encode('utf-8'))
    memory_file.seek(0)

    return send_file(memory_file, attachment_filename=filename, as_attachment=True)

if __name__ == '__main__':
    app.run(debug=True)  
